<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="Samples.Views.MainView">
  <StackLayout Orientation="Vertical">
    <Button Text="ApriPopup" Command="{Binding PopupCommand}"/>
    <Button Text="ApriPagina" Command="{Binding PaginaCommand}"/>
    <Button Text="ApriAlert" Command="{Binding AlertCommand}"/>
    <Button Text="Open Services" Command="{Binding OnOpenServices}"/>
    <Button Text="Controls" Command="{Binding OnOpenControls}"/>
  </StackLayout>
</ContentPage>